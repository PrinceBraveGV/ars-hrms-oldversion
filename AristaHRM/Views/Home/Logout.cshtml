@{
    ViewBag.Title = "HRIS - Log Out";
    Layout = "~/Views/Shared/_redirectLayout.cshtml";
}

<br />
<hr />
<div class="formbase">
    <table class="tablebase">
        <thead>
            <tr>
                <td class="tableheader">
                    <p class="tableheadercontent">Log Out</p>
                </td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="tablebody">
                    <div class="tablebodycontent">
                        <p style="font: 14px Arial, Tahoma; text-align:left">Anda sudah berhasil log out dari sistem.</p>
                        <p style="font: 14px Arial, Tahoma; text-align:left">Apabila anda tidak berhasil dialihkan secara otomatis setelah 5 detik, silakan klik tombol di bawah ini untuk kembali ke halaman indeks.</p>
                        <br />
                        @using (Html.BeginForm("Logout", "Home", FormMethod.Post))
                        {
                            @Html.DevExpress().Button(button =>
                            {
                                button.Name = "btnRedirect";
                                button.Text = "Kembali";
                                button.UseSubmitBehavior = true;
                                button.ClientSideEvents.Click = "function (s, e) { window.open('" + Url.Action("Index", "Home") + "', '_parent'); }";
                                button.Theme = AristaHRM.Theme.SelectTheme;
                            }).GetHtml();
                        }
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>


