@{
    ViewBag.Title = "HRIS - Proses Mutasi Sukses";
    Layout = "~/Views/Shared/_redirectLayout.cshtml";
}

@{
    Html.EnableUnobtrusiveJavaScript();
}

<br /><br />
<hr />
<div class="formbase">
    <table class="tablebase">
        <thead>
            <tr>
                <td class="tableheader">
                    <p class="tableheadercontent">Pemberitahuan</p>
                </td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="tablebody">
                    <div class="tablebodycontent">
                        <p style="font: 14px Arial, Tahoma; text-align:center">
                            Anda telah berhasil melakukan proses mutasi karyawan.<br />
                        </p>
                        <p style="font: 14px Arial, Tahoma; text-align:center">Silakan klik tombol di bawah ini untuk kembali ke halaman sebelumnya.</p>
                        <br />
                        @using (Html.BeginForm("MutasiSukses", "Notif", FormMethod.Post))
                        {
                            @Html.DevExpress().Button(button =>
                            {
                                button.Name = "btnRedirect";
                                button.Text = "Kembali";
                                button.UseSubmitBehavior = true;
                                button.ClientSideEvents.Click = "function (s, e) { window.open('" + Url.Action("MutasiAtasan", "Admin") + "', '_parent'); }";
                                button.Theme = AristaHRM.Theme.SelectTheme;
                            }).GetHtml();
                        }
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>


