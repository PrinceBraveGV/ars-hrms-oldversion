@{
    ViewBag.Title = "HRIS - Konfirmasi Reset Password";
    Layout = "~/Views/Shared/_redirectLayout.cshtml";
}

@{
    Html.EnableUnobtrusiveJavaScript();
}

<br /><br />
<hr />
<div class="formbase">
    <table class="tablebase">
        <thead>
            <tr>
                <td class="tableheader">
                    <p class="tableheadercontent">Konfirmasi Reset Password</p>
                </td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="tablebody">
                    <div class="tablebodycontent">
                        <p style="font: 14px Arial, Tahoma; text-align:center">Proses reset password untuk akun anda telah selesai.</p>
                        <p style="font: 14px Arial, Tahoma; text-align:center">Apabila anda tidak dialihkan otomatis setelah 5 detik, silakan klik tombol di bawah ini untuk kembali ke halaman indeks.</p>
                        <p style="font: 14px Arial, Tahoma; text-align:center">Catatan: Apabila terjadi masalah dalam proses input data, segera hubungi pihak admin/support.</p>
                        <br />
                        @using (Html.BeginForm("ResetSukses", "Notif", FormMethod.Post))
                        {
                            @Html.DevExpress().Button(button =>
                            {
                                button.Name = "btnRedirect";
                                button.Text = "Kembali";
                                button.UseSubmitBehavior = true;
                                button.ClientSideEvents.Click = "function (s, e) { window.open('" + Url.Action("Index", "Home") + "', '_parent'); }";
                                button.Theme = AristaHRM.Theme.SelectTheme;
                            }).GetHtml();
                        }
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>


