        var exportToXLSX = "@DevExpressHelper.GetUrl(new { Controller = "Master", Action = "EksporSisaXLSX" })";
        var exportToRTF = "@DevExpressHelper.GetUrl(new { Controller = "Master", Action = "EksporSisaRTF" })";
