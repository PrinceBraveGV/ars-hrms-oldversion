    ViewBag.Title = "HRIS - Data Sisa Cuti Bawahan";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

@using AristaHRM.Models

@{
    Html.EnableUnobtrusiveJavaScript();
