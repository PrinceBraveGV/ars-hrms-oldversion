@{
    ViewBag.Title = "HRIS - Statistik Karyawan";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

@using AristaHRM.Models

@model KaryawanStatModel

@{
    Html.EnableUnobtrusiveJavaScript();
}

<div class="formbase">
    <table class="tablebase">
        <thead>
            <tr>
                <td class="tableheader">
                    <p class="tableheadercontent">Statistik Karyawan</p>
                </td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="tablebody">
                    <div class="tablebodycontent">
                        <label style="font: 12px Arial; text-align:left">Berikut ini adalah statistik data karyawan yang tercatat pada database sistem.</label>
                        @using (Html.BeginForm())
                        {
                            <div style="margin-left:50px">
                            @Html.DevExpress().FormLayout(settings =>
                            {
                                settings.Name = "StatFormLayout";
                                settings.AlignItemCaptionsInAllGroups = true;
                                settings.SettingsItemCaptions.HorizontalAlign = FormLayoutHorizontalAlign.Right;
                                settings.Theme = AristaHRM.Theme.SelectTheme;
                                settings.Items.Add(layoutitem =>
                                {
                                    layoutitem.Caption = string.Empty;
                                    layoutitem.ShowCaption = DefaultBoolean.False;
                                    layoutitem.SetNestedContent(() =>
                                    {
                                        ViewContext.Writer.Write("<p style='text-align:left; font: 14px Arial'>Statistik Karyawan HO</p><hr />");
                                    });
                                });
                                settings.Items.Add(layoutitem =>
                                {
                                    layoutitem.Caption = "Total karyawan HO ";
                                    layoutitem.SetNestedContent(() =>
                                    {
                                        Html.DevExpress().TextBoxFor(m => m.TotalPusat, lblsettings =>
                                        {
                                            lblsettings.Width = Unit.Pixel(200);
                                            lblsettings.Style.Add("color", "white");
                                            lblsettings.Style.Add("border", "none");
                                            lblsettings.ReadOnly = true;
                                        }).GetHtml();
                                    });
                                });
                                settings.Items.Add(layoutitem =>
                                {
                                    layoutitem.Caption = "Total karyawan aktif ";
                                    layoutitem.SetNestedContent(() =>
                                    {
                                        Html.DevExpress().TextBoxFor(m => m.KarPusatAktif, lblsettings =>
                                        {
                                            lblsettings.Width = Unit.Pixel(200);
                                            lblsettings.Style.Add("color", "white");
                                            lblsettings.Style.Add("border", "none");
                                            lblsettings.ReadOnly = true;
                                        }).GetHtml();
                                    });
                                });
                                settings.Items.Add(layoutitem =>
                                {
                                    layoutitem.Caption = "Total karyawan resign ";
                                    layoutitem.SetNestedContent(() =>
                                    {
                                        Html.DevExpress().TextBoxFor(m => m.KarPusatResign, lblsettings =>
                                        {
                                            lblsettings.Width = Unit.Pixel(200);
                                            lblsettings.Style.Add("color", "white");
                                            lblsettings.Style.Add("border", "none");
                                            lblsettings.ReadOnly = true;
                                        }).GetHtml();
                                    });
                                });
                                settings.Items.Add(layoutitem =>
                                {
                                    layoutitem.Caption = string.Empty;
                                    layoutitem.ShowCaption = DefaultBoolean.False;
                                    layoutitem.SetNestedContent(() =>
                                    {
                                        ViewContext.Writer.Write("<p style='text-align:left; font: 14px Arial'>Statistik Karyawan Cabang</p><hr />");
                                    });
                                });
                                settings.Items.Add(layoutitem =>
                                {
                                    layoutitem.Caption = "Total karyawan seluruh cabang ";
                                    layoutitem.SetNestedContent(() =>
                                    {
                                        Html.DevExpress().TextBoxFor(m => m.TotalCabang, lblsettings =>
                                        {
                                            lblsettings.Width = Unit.Pixel(200);
                                            lblsettings.Style.Add("color", "white");
                                            lblsettings.Style.Add("border", "none");
                                            lblsettings.ReadOnly = true;
                                        }).GetHtml();
                                    });
                                });
                                settings.Items.Add(layoutitem =>
                                {
                                    layoutitem.Caption = "Total karyawan aktif ";
                                    layoutitem.SetNestedContent(() =>
                                    {
                                        Html.DevExpress().TextBoxFor(m => m.KarCabangAktif, lblsettings =>
                                        {
                                            lblsettings.Width = Unit.Pixel(200);
                                            lblsettings.Style.Add("color", "white");
                                            lblsettings.Style.Add("border", "none");
                                            lblsettings.ReadOnly = true;
                                        }).GetHtml();
                                    });
                                });
                                settings.Items.Add(layoutitem =>
                                {
                                    layoutitem.Caption = "Total karyawan resign ";
                                    layoutitem.SetNestedContent(() =>
                                    {
                                        Html.DevExpress().TextBoxFor(m => m.KarCabangResign, lblsettings =>
                                        {
                                            lblsettings.Width = Unit.Pixel(200);
                                            lblsettings.Style.Add("color", "white");
                                            lblsettings.Style.Add("border", "none");
                                            lblsettings.ReadOnly = true;
                                        }).GetHtml();
                                    });
                                });
                            }).GetHtml()
                        </div>

                            @Html.DevExpress().Button(btnsettings =>
                            {
                                btnsettings.Name = "btnRefresh";
                                btnsettings.Text = "Refresh Data";
                                btnsettings.Images.Image.Url = "~/Images/Refresh.png";
                                btnsettings.Images.Image.Width = Unit.Pixel(15);
                                btnsettings.Images.Image.Height = Unit.Pixel(15);
                                btnsettings.UseSubmitBehavior = false;
                                btnsettings.Theme = AristaHRM.Theme.SelectTheme;
                                btnsettings.ClientSideEvents.Click = "function (s, e) { window.open('" + Url.Action("DataStatKar", "Report") + "', '_parent'); }";
                            }).GetHtml()
                        }
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
