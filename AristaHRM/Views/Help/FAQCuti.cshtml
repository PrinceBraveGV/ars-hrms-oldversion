                                settings.RouteValues = new { Controller = "Help", Action = "FAQGuide" };
                                settings.Theme = AristaHRM.Theme.SelectTheme;
                            }).GetHtml();
                        </p>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>