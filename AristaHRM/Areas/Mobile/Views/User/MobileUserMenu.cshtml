@{
    ViewBag.Title = " - User Menu -";
    Layout = "~/Areas/Mobile/Views/Shared/_rootMobile.cshtml";
}

@{
    Html.EnableUnobtrusiveJavaScript();
}

@{ var mobilearea = new { area = "Mobile" }; }

@section Header {
    @Html.ActionLink("Logout", "Logout", "Home", mobilearea, new { data_icon = "lock" })
}

@section Title {
    <h5>@ViewBag.Title</h5>
}

<h2>@ViewBag.ErrorMsg</h2>
<p>
    Selamat Datang, @Html.ActionLink(User.Identity.Name, "Profil", "User", mobilearea, new { hidefocus = "hidefocus" })
</p>

@{
    <ul data-role="listview" data-inset="true">
        <li data-role="list-divider">Menu Utama</li>
        <li>@Html.ActionLink("Profil Anda", "Profil", "User", mobilearea, new { hidefocus = "hidefocus" })</li>
        <li>@Html.ActionLink("Ubah Password", "UbahPassword", "User", mobilearea, new { hidefocus = "hidefocus" })</li>
        <li>@Html.ActionLink("Pengajuan Cuti", "Pengajuan", "User", mobilearea, new { hidefocus = "hidefocus" })</li>
        <li>@Html.ActionLink("Riwayat Cuti", "Riwayat", "User", mobilearea, new { hidefocus = "hidefocus" })</li>
        <li>@Html.ActionLink("Sisa Cuti Tahunan", "SisaTahunan", "User", mobilearea, new { hidefocus = "hidefocus" })</li>
        <li>@Html.ActionLink("Bantuan", "MobileGuide", "Help", mobilearea, new { hidefocus = "hidefocus" })</li>
    </ul>
}



