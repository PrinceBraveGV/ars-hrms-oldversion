@{
    ViewBag.Title = " - Master Data -";
    Layout = "~/Areas/Mobile/Views/Shared/_rootMobile.cshtml";
}

@{
    Html.EnableUnobtrusiveJavaScript();
}

@{ var mobilearea = new { area = "Mobile" }; }

@section Header {
    @Html.ActionLink("Kembali", "ManagerMenu", "Manager", mobilearea, new { data_icon = "arrow-l" })
}

@section Title {
    <h5>@ViewBag.Title</h5>
}

@{
    <ul data-role="listview" data-inset="true">
        <li data-role="list-divider"><a href="@Url.Action("ManagerMenu", "Manager", mobilearea)">Manager Home</a> > Master Data</li>
        <li data-role="list-divider">Menu Master</li>

        <li>@Html.ActionLink("Data Karyawan", "Karyawan", "Manager", mobilearea, new { hidefocus = "hidefocus" })</li>
        <li>@Html.ActionLink("Data Riwayat Cuti", "Riwayat", "Manager", mobilearea, new { hidefocus = "hidefocus" })</li>
        <li>@Html.ActionLink("Sisa Cuti Tahunan", "SisaTahunan", "Manager", mobilearea, new { hidefocus = "hidefocus" })</li>
        <li>@Html.ActionLink("Bantuan", "MobileGuide", "Help", mobilearea, new { hidefocus = "hidefocus" })</li>
    </ul>

}