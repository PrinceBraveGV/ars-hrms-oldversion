@{
    ViewBag.Title = " - Administrasi Karyawan -";
    Layout = "~/Areas/Mobile/Views/Shared/_rootMobile.cshtml";
}

@{
    Html.EnableUnobtrusiveJavaScript();
}

@{ var mobilearea = new { area = "Mobile" }; }

@section Header {
    @Html.ActionLink("Kembali", "AdminMenu", "Admin", mobilearea, new { data_icon = "arrow-l" })
    @Html.ActionLink("Home", "Dashboard", "Home", mobilearea, new { data_icon = "home" })
}

@section Title {
    <h5>@ViewBag.Title</h5>
}

@{
    <ul data-role="listview" data-inset="true">
        <li data-role="list-divider">
            <a href="@Url.Action("AdminMenu", "Admin", mobilearea)">Admin Home</a> > Admin Karyawan
        </li>
        <li data-role="list-divider">Administrasi Karyawan</li>
        <li>@Html.ActionLink("Profil Karyawan", "Profil", "Admin", mobilearea, new { hidefocus = "hidefocus" })</li>
        <li>@Html.ActionLink("Ubah Password", "UbahPassword", "Admin", mobilearea, new { hidefocus = "hidefocus" })</li>
        <li>@Html.ActionLink("Reset Password", "ResetPassword", "Admin", mobilearea, new { hidefocus = "hidefocus" })</li>
        <li>@Html.ActionLink("Reset Master", "ResetMaster", "Admin", mobilearea, new { hidefocus = "hidefocus" })</li>
        <li>@Html.ActionLink("Mutasi Staf", "MutasiStaff", "Admin", mobilearea, new { hidefocus = "hidefocus" })</li>
        <li>@Html.ActionLink("Mutasi Atasan", "MutasiAtasan", "Admin", mobilearea, new { hidefocus = "hidefocus" })</li>
        <li>@Html.ActionLink("Mutasi Kepala Cabang", "MutasiKacab", "Admin", mobilearea, new { hidefocus = "hidefocus" })</li>
        <li>@Html.ActionLink("Resign", "Resign", "Admin", mobilearea, new { hidefocus = "hidefocus" })</li>
        <li>@Html.ActionLink("Bantuan", "MobileGuide", "Help", mobilearea, new { hidefocus = "hidefocus" })</li>
    </ul>
}