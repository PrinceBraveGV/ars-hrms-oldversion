            {
                first = false;
                return;
            }

            if (e.VisibleIndex.Equals(dxwgv.FocusedRowIndex) && !first)
            {
                first = true;
                e.Row.BackColor = System.Drawing.Color.Orange;
                e.Row.Style.Add("background-color", "#ffa500");
